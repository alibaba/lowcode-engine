{
  "lerna": "2.11.0",
  "version": "1.0.31",
  "npmClient": "tyarn",
  "registry": "http://registry.npm.alibaba-inc.com",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "version": {
      "allowBranch": [
        "master",
        "main",
        "release/*",
        "daily/*"
      ]
    },
    "publish": {
      "npmClient": "tnpm",
      "verifyRegistry": false,
      "verifyAccess": false,
      "ignoreChanges": [
        "**/*.md",
        "**/test/**"
      ],
      "message": "chore(release): publish %v",
      "conventionalCommits": true
    }
  }
}
